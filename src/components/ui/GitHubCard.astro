---
interface Props {
  repo?: string
}

const { repo = '' } = Astro.props as Props

// Graceful fallback for missing repo during view transitions
const [owner = '', repoName = ''] = repo ? repo.split('/') : ['', '']
const isValid = owner && repoName
---

{isValid && (
  <a href={`https://github.com/${repo}`} class="gc-container" data-repo={repo} target="_blank" rel="noopener noreferrer">
    <div class="gc-title-bar">
      <div class="gc-owner-avatar"></div>
      <div class="gc-repo-title">
        <span>{owner}</span>
        <span class="gc-slash">/</span>
        <strong>{repoName}</strong>
      </div>
      <svg class="gc-github-icon" viewBox="0 0 16 16" fill="currentColor">
